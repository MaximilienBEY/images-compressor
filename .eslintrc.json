{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard",
        "prettier",
        "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.eslint.json"
    },
    "ignorePatterns": [
        "node_modules",
        "dist",
        "assets",
        "public"
    ],
    "plugins": [
        "react",
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "no-empty": 1,
        "no-useless-catch": 1,
        "no-empty-pattern": 1,
        "prettier/prettier": 1,
        "prefer-const": 1,
        "no-unused-vars": "off",
        "no-empty-function": "off",
        "@typescript-eslint/no-empty-function": 0,
        "@typescript-eslint/no-empty-interface": 0,
        "@typescript-eslint/switch-exhaustiveness-check": 2,
        "no-useless-rename": 1,
        "object-shorthand": 1,
        "@typescript-eslint/no-use-before-define": 0,
        "@typescript-eslint/no-non-null-assertion": 0,
        "@typescript-eslint/ban-types": 1,
        "@typescript-eslint/no-unused-vars": [
            1,
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "react/prop-types": "off"
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}